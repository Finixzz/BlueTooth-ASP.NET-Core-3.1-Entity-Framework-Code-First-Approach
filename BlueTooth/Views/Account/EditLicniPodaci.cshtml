@model BlueTooth.ViewModels.LicniPodaciViewModel;
@{
    ViewData["Title"] = "EditLicniPodaci";
    Layout = "~/Views/_Layout.cshtml";
}

<div class="d-container" style="width:70%; margin-left:auto; margin-right:auto;">
    <form asp-action="SaveChanges" asp-controller="Account">
        <div class="form-group row">
            <label asp-for="Id" class="col-sm-2 col-form-label col-form-label-lg">Id</label>
            <div class="col-sm-10">
                <input asp-for="Id" type="text" class="form-control form-control-lg" value="@Model.Id" disabled>
            </div>
        </div>
        <div class="form-group">
            <div asp-validation-summary="All" class="text-danger"></div>
            <label asp-for="Email">Email</label>
            <input asp-for="Email" type="email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="FirstName">Ime</label>
            <input asp-for="FirstName" type="text" class="form-control" />
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="LastName">Prezime</label>
            <input asp-for="LastName" type="text" class="form-control" />
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="BirthDate">Datum rođenja</label>
            <input asp-for="BirthDate" type="date" class="form-control" />
            <span asp-validation-for="BirthDate" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Gender">Spol</label>
            <select asp-for="Gender">
                <option>Select Gender</option>
                <option value="M">M</option>
                <option value="F">F</option>
            </select>
            <span asp-validation-for="Gender" class="text-danger"></span>
        </div>
        <button class="btn btn-primary" style="width: 30%; padding:5px;">Spremi</button>
        <br /><br />
        <a class="btn btn-success" asp-action="Index" asp-controller="Account" style="width: 30%; padding:5px; color:white;">Odbaci promjene</a>
    </form>

</div>

@section scripts{
    <script src="~/jquery-validation/jquery.validate.js"></script>
    <script src="~/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
}

