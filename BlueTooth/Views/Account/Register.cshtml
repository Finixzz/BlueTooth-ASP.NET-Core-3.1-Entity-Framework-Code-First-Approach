@model BlueTooth.ViewModels.RegisterViewModel
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/_Layout.cshtml";
}



        <div class="d-container" style="width:70%; margin-left:auto; margin-right:auto;">
            <h1>Registracija</h1>
            <form asp-action="Register" asp-controller="Account" method="post" style="padding:30px 0;">
                <div class="form-group">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <label asp-for="Email">Email</label>
                    <input asp-for="Email" type="email" value="" class="form-control" autocomplete="off"/>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="FirstName">Ime</label>
                    <input asp-for="FirstName" type="text" value="" class="form-control" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="LastName">Prezime</label>
                    <input asp-for="LastName" type="text" value="" class="form-control" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="BirthDate">Datum rođenja</label>
                    <input asp-for="BirthDate" type="date" value="" class="form-control" />
                    <span asp-validation-for="BirthDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Gender">Spol</label>
                    <select asp-for="Gender">
                        <option>Select Gender</option>
                        <option value="M">M</option>
                        <option value="F">F</option>
                    </select>
                    <span asp-validation-for="Gender" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password">Lozinka</label>
                    <input asp-for="Password" type="password" value="" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ConfirmPassword">Potvrdi lozinku</label>
                    <input asp-for="ConfirmPassword" type="password" value="" class="form-control" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>

                <button class="btn btn-primary" type="submit" style="width:100%;">Register</button>
            </form>
        </div>



