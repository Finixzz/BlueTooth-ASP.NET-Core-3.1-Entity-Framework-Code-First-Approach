@model BlueTooth.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/_Layout.cshtml";
}

<div class="login-container">
    <div class="d-container">
        <h1 style="margin-left:10%;">Login</h1>
        <hr />
        <form method="post" class="login-formater">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Email">Email</label>
                <input asp-for="Email" type="email" value="" class="form-control" autocomplete="off" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password">Lozinka</label>
                <input asp-for="Password" type="password" value="" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label asp-for="RememberMe">
                        <input asp-for="RememberMe" />
                        @Html.DisplayNameFor(m => m.RememberMe)
                    </label>
                </div>
            </div>
            <button class="btn btn-primary" type="submit" style="width:200px;">Login</button>
        </form>
    </div>
</div>


