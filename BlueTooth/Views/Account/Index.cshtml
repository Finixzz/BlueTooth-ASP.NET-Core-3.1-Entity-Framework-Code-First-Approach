@model BlueTooth.ViewModels.LicniPodaciViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/_Layout.cshtml";
}

   
    <div class="d-container" style="width:70%; margin-left:auto; margin-right:auto;">

        <div class="form-group row">
            <label for="colFormLabelLg" class="col-sm-2 col-form-label col-form-label-lg">Id</label>
            <div class="col-sm-10">
                <input asp-for="Id" type="text" class="form-control form-control-lg" id="colFormLabelLg" placeholder="col-form-label-lg" disabled>
            </div>
        </div>
        <div class="form-group row">
            <label for="colFormLabelLg" class="col-sm-2 col-form-label col-form-label-lg">Ime</label>
            <div class="col-sm-10">
                <input asp-for="FirstName" type="text" class="form-control form-control-lg" id="colFormLabelLg" placeholder="col-form-label-lg" disabled>
            </div>
        </div>
        <div class="form-group row">
            <label for="colFormLabelLg" class="col-sm-2 col-form-label col-form-label-lg">Prezime</label>
            <div class="col-sm-10">
                <input asp-for="LastName" type="text" class="form-control form-control-lg" id="colFormLabelLg" placeholder="col-form-label-lg" disabled>
            </div>
        </div>
        <div class="form-group row">
            <label for="colFormLabelLg" class="col-sm-2 col-form-label col-form-label-lg">Email</label>
            <div class="col-sm-10">
                <input asp-for="Email" type="email" class="form-control form-control-lg" id="colFormLabelLg" placeholder="col-form-label-lg" disabled>
            </div>
        </div>
        <div class="form-group row">
            <label for="colFormLabelLg" class="col-sm-2 col-form-label col-form-label-lg">Datum rođenja</label>
            <div class="col-sm-10">
                <input asp-for="BirthDate" type="text" class="form-control form-control-lg" id="colFormLabelLg" placeholder="col-form-label-lg" disabled>
            </div>
        </div>
        <div class="form-group row">
            <label for="colFormLabelLg" class="col-sm-2 col-form-label col-form-label-lg">Spol</label>
            <div class="col-sm-10">
                <input asp-for="Gender" type="text" class="form-control form-control-lg" id="colFormLabelLg" placeholder="col-form-label-lg" disabled>
            </div>
        </div>

        <a asp-action="EditLicniPodaci" asp-controller="Account" asp-route-userId="@Model.Id" class="btn btn-primary" style="width: 100%; padding:5px;">Uredi</a>
        <br /><br />
        <a asp-controller="Account"
           asp-action="ChangePassword" class="btn btn-primary" style="width: 100%; padding:5px;">
            Promijeni lozinku
        </a>
    </div>


