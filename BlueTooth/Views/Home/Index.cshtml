@section scripts{

    <script>
        "use strict"
        $(document).ready(() => {
            function compare(a, b) {
                if (a.price < b.price) {
                    return -1;
                }
                if (a.price > b.price) {
                    return 1;
                }
                return 0;
            }
            function createTableRow(e, i) {
                return ` <tr>
                                <th scope="row">${i + 1}</th>
                                <td>${e.name}</td>
                                <td>${e.price} KM</td>
                            </tr>`;
            }

            $.ajax({
                method: "GET",
                url: "/api/services",
                dataType: "json",
                data: "[]",
                success: function (services) {
                    services.sort(compare);
                    services.forEach((service, i) => {
                        $("#tableContent").append(createTableRow(service, i));
                    });
                    $("#usluge").DataTable();
                }
            })

            
        })
    </script>
  
