@model BlueTooth.ViewModels.RadnikCreateViewModel
@{
    ViewData["Title"] = "Detalji";
    Layout = "~/Views/_Layout.cshtml";
    
}


    <div class="d-container" style="width:70%; margin-left:auto; margin-right:auto; margin-bottom:50px;" >
        <div class="form-group row">
            <label for="colFormLabelLg" class="col-sm-2 col-form-label col-form-label-lg">Id</label>
            <div class="col-sm-10">
                <input asp-for="Id" type="text" class="form-control form-control-lg" disabled>
            </div>
        </div>
        <div class="form-group row">
            <label for="colFormLabelLg" class="col-sm-2 col-form-label col-form-label-lg">Ime</label>
            <div class="col-sm-10">
                <input asp-for="FirstName" type="text" class="form-control form-control-lg" disabled>
            </div>
        </div>
        <div class="form-group row">
            <label for="colFormLabelLg" class="col-sm-2 col-form-label col-form-label-lg">Prezime</label>
            <div class="col-sm-10">
                <input asp-for="LastName" type="text" class="form-control form-control-lg" disabled>
            </div>
        </div>
        <div class="form-group row">
            <label for="colFormLabelLg" class="col-sm-2 col-form-label col-form-label-lg">Email</label>
            <div class="col-sm-10">
                <input asp-for="Email" type="email" class="form-control form-control-lg" disabled>
            </div>
        </div>
        <div class="form-group row">
            <label for="colFormLabelLg" class="col-sm-2 col-form-label col-form-label-lg">Datum rođenja</label>
            <div class="col-sm-10">
                <input asp-for="BirthDate" type="text" class="form-control form-control-lg" placeholder="col-form-label-lg" disabled>
            </div>
        </div>
        <div class="form-group row">
            <label for="colFormLabelLg" class="col-sm-2 col-form-label col-form-label-lg">Spol</label>
            <div class="col-sm-10">
                <input asp-for="Gender" type="text" class="form-control form-control-lg" placeholder="col-form-label-lg" disabled>
            </div>
        </div>
        <div class="form-group row">
            <label for="colFormLabelLg" class="col-sm-2 col-form-label col-form-label-lg">Stručna sprema</label>
            <div class="col-sm-10">
                <input asp-for="Qualification" type="text" class="form-control form-control-lg" id="colFormLabelLg" placeholder="col-form-label-lg" disabled>
            </div>
        </div>

        <div class="form-group row">
            <label for="colFormLabelLg" class="col-sm-2 col-form-label col-form-label-lg">CV</label>


            @if (Model.CVPath == "N/A")
            {
                <div class="form-group row">
                    <div class="col-sm-10">
                        <input  asp-for="CV" type="text" class="form-control form-control-lg" id="colFormLabelLg" placeholder="N/A" disabled>
                    </div>
                </div>
            }
            else
            {
                <iframe src="https://localhost:44389/CVRepo/@Model.CVPath" style="border:0; width:100%; height:130vh;"></iframe>
            }
        </div>

        <BR /><BR />
        <a asp-action="index" asp-controller="osoblje" class="btn btn-primary" style="width: 100%; padding:5px;">Povratak</a>

    </div>


