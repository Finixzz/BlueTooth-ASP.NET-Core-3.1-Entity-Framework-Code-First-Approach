@model BlueTooth.ViewModels.RadnikCreateViewModel
@{
    ViewData["Title"] = "DodajRadnika";
    Layout = "~/Views/_Layout.cshtml";
}

<div class="d-container" style="width:70%; margin-left:auto; margin-right:auto;">
    <form enctype="multipart/form-data" asp-action="DodajRadnika" asp-controller="Osoblje" method="post" style="margin-bottom:50px">
        <div class="form-group">
            <div asp-validation-summary="All" class="text-danger"></div>
            <label asp-for="Email">Email</label>
            <input asp-for="Email" type="email" class="form-control" autocomplete="off" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="FirstName">Ime</label>
            <input asp-for="FirstName" type="text" class="form-control" />
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="LastName">Prezime</label>
            <input asp-for="LastName" type="text" class="form-control" />
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="BirthDate">Datum rođenja</label>
            <input asp-for="BirthDate" type="date" class="form-control" />
            <span asp-validation-for="BirthDate" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Gender">Spol</label>
            <select asp-for="Gender">
                <option>Odaberite spol</option>
                <option value="M">M</option>
                <option value="F">F</option>
            </select>
            <span asp-validation-for="Gender" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Qualification">Kvalifikacije</label>
            <select asp-for="Qualification">
                <option>Odaberite stručnu spremu</option>
                <option value="Medicinska sestra">Medicinska sestra</option>
                <option value="Medicinski tehničar">Medicinski tehničar</option>
                <option value="Protetičar">Protetičar</option>
                <option value="Dr.">Dr.</option>
            </select>
            <span asp-validation-for="Qualification" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <label asp-for="CV" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <div class="custom-file">
                    <input asp-for="CV"  class="form-control custom-file-input">
                    <label class="custom-file-label">Izaberite fajl...</label>
                </div>
            </div>
        </div>
        <div class="form-group">
            <input asp-for="Password" type="password" value="Radnik1122??" class="form-control" hidden/>
            <input asp-for="ConfirmPassword" type="password" value="Radnik1122??" class="form-control" hidden />
        </div>
        <button class="btn btn-primary" style="width: 30%; padding:5px;">Dodaj</button>
        <br /><br />
        <a class="btn btn-success" asp-action="Index" asp-controller="Home" style="width: 30%; padding:5px; color:white;">Povratak</a>
    </form>

</div>

@section scripts{
    <script src="~/jquery-validation/jquery.validate.js"></script>
    <script src="~/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
    <script>
        $(document).ready(function () {
            $('.custom-file-input').on("change", function () {
                var fileName = $(this).val().split("\\").pop();

                $(this).next('.custom-file-label').html(fileName);
            });
        });
    </script>
}
